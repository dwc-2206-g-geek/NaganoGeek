<div class="container">
  <div class='row'>
    <div class="col-md-10 px-5 px-sm-0 mx-auto mt-4">
  
    <h1>配送先編集</h1>
    <%= form_with model: @address do |f| %>

    <% if @address.errors.any? %>
      <div class="#error_explanation">
        <%= @address.errors.count %>error prohibited this address from being saved:
      </div>
        <ul>
          <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>

      <div class="form-row mt-5">
        <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: 'col-sm-3 col-form-label' %>
        <div class="col">
        <%= f.text_field :postal_code, class: 'form-control' %>
        </div>
      </div>

      <div class="form-row mt-3">
        <%= f.label :address, "住所", class: 'col-sm-3 col-form-label' %>
        <div class="col">
        <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>
    
      <div class="form-row mt-3">
        <%= f.label :name, "宛名", class: 'col-sm-3 col-form-label' %>
        <div class="col">
        <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
    
      <div class="row">
        <div class="col text-right mt-4 mb-4">
        <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
        </div>
      </div>

    <% end %>
  
    </div>
  </div>
</div>
