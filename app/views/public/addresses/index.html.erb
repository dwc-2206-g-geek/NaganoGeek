<div class="container">
  <div class='row'>
    <div class="col-md-10 px-5 px-sm-0 mx-auto mt-4">
  
    <h1>配送先登録/一覧</h1>
    <%= form_with model: @address do |f| %>

      <div class="form-row mt-5">
        <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: 'col-sm-3 col-form-label' %>
        <div class="col">
        <%= f.text_field :postal_code, class: 'form-control' %>
        </div>
      </div>

      <div class="form-row mt-3">
        <%= f.label :address, "住所", class: 'col-sm-3 col-form-label' %>
        <div class="col">
        <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>

      <div class="form-row mt-3">
        <%= f.label :name, "宛名", class: 'col-sm-3 col-form-label' %>
        <div class="col">
        <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col text-right mt-4 mb-4">
        <%= f.submit "新規登録",class: "btn btn-success" %>
        </div>
      </div>

    <% end %>

      <table class='table table-hover table-bordered '>
        <thead>
          <tr class="table-active">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
              </td>
            <tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>
