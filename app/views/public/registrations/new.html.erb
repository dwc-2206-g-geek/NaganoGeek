<div class="col-md-8 px-5 px-sm-0 mx-auto">
    
      
  <h1>新規会員登録</h1>
  <%= form_with model: @customer, url: registration_path(resource_name) do |f| %>

    <%= render "public/shared/error_messages", resource: resource %>


      <div class="form-row mt-5">
        <%= f.label :名前, class: 'col-sm-3 col-form-label' %>
        <div class="col">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "姓" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :placeholder => "名" %>
        </div>
      </div>

      <div class="form-row">
         <%= f.label :カナ, class: 'col-sm-3 col-form-label' %>
        <div class="col">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", :placeholder => "セイ" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", :placeholder => "メイ" %>
        </div>
      </div>

      <div class="form-row">
          <%= f.label :メールアドレス, class: 'col-sm-3 col-form-label' %>
        <div class="col">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="form-row">
          <%= f.label :郵便番号, class: 'col-sm-3 col-form-label' %>
        <div class="col">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
      </div>

      <div class="form-row">
          <%= f.label :住所, class: 'col-sm-3 col-form-label' %>
        <div class="col">
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
      </div>

      <div class="form-row">
          <%= f.label :電話番号（ハイフンなし）, class: 'col-sm-3 col-form-label' %>
        <div class="col">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
      </div>

      <div class="form-row">
          <%= f.label :パスワード（6文字以上）, class: 'col-sm-3 col-form-label' %>
        <div class="col">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-row">
          <%= f.label :パスワード（確認用）, class: 'col-sm-3 col-form-label' %>
        <div class="col">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
          

      <div class="mt-4 mb-4">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>

    <% end %>

    <h2>既に登録済みの方</h2>
    <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
  
</div>
