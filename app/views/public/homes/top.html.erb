  <div class="container">
    <div class="row pt-5">

      <%= render 'public/homes/genre_search', genres: @genres %>

      <div class="col-10 pl-5">
        <div class="card" style="width:align-self-center;">
          <%= image_tag "top_image", class:"card-img"%>
            <div class="card-img-overlay d-flex align-items-center justify-content-center">
              <h4 class="bg-light p-4">ようこそ、ながのCAKEへ！<br>
                 このサイトは、ケーキ販売のECサイトになります。<br>
                 会員ではない方も商品の閲覧はできますが、<br>
                 購入には会員登録が必要になります。
              </h4>
            </div>
        </div>
      </div>

    </div>

    <div class="row">
      <div class="col-2 p-3">
      </div>

      <div class="col-10 pt-5 pr-5 pl-5">
        <h3><strong>新着商品</strong></h3>

        <% @new_items.each do |item| %>
          <item class="d-inline-block mx-3 my-5">
            <%= link_to item_path(item.id) do %>
              <% if item.image.attached? %>
                <%= image_tag item.image, size: "165x165" %>
              <% else %>
                <%= image_tag 'noimage_icon', size: "165x165" %>
              <% end %><br>
              <%= item.name %><br>
            <% end %>
            <%= item.add_tax_price.to_s(:delimited) %>円
          </item>
      <% end %>

      </div>
    </div>

    <div class="row">

      <div class="col text-right">
        <%= link_to "全ての商品を見る>", items_path %>
      </div>

    </div>

  </div>
