<div class="col-md-8 px-5 px-sm-0 mx-auto">
  
  <h1>会員情報編集</h1>

    <%= form_with model: @customer do |f| %>

      <div class="form-row mt-5">
        <%= f.label :名前, class: 'col-sm-3 col-form-label' %>
        <div class="col">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>
      </div>

      <div class="form-row">
         <%= f.label :フリガナ, class: 'col-sm-3 col-form-label' %>
        <div class="col">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        </div>
      </div>

      <div class="form-row">
          <%= f.label :郵便番号, class: 'col-sm-3 col-form-label' %>
        <div class="col">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
      </div>

      <div class="form-row">
          <%= f.label :住所, class: 'col-sm-3 col-form-label' %>
        <div class="col">
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
      </div>

      <div class="form-row">
          <%= f.label :電話番号, class: 'col-sm-3 col-form-label' %>
        <div class="col">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
      </div>

      <div class="form-row">
          <%= f.label :メールアドレス, class: 'col-sm-3 col-form-label' %>
        <div class="col">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
      
    <% end %>
          
  <div class="container mt-4 mb-4">
    <div class="row">
      <div class="col">
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      </div>
    <div class="col">
      <%= link_to "退会する", unsubscribe_path, class: 'btn btn-danger' %>
    </div>
  </div>    
rai
  
</div>
