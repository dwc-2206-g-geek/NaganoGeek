<div class="col-md-8 px-5 px-sm-0 mx-auto">

  <h1>顧客のマイページ</h1>

  <h2>登録情報</h2>
   <%= link_to "編集する", edit_path(current_customer.id), class: 'btn btn-success' %>

   <table class="table table-bordered">
  <tbody>
    <tr>
      <td class="table-active">氏名</td>
      <td><%= current_customer.first_name %>&nbsp;<%= current_customer.last_name %></td>
    </tr>
    <tr>
      <td class="table-active">カナ</td>
      <td><%= current_customer.first_name_kana %>&nbsp;<%= current_customer.last_name_kana %></td>
    </tr>
    <tr>
      <td class="table-active">郵便番号</td>
      <td><%= current_customer.postal_code %></td>
    </tr>
    <tr>
      <td class="table-active">住所</td>
      <td><%= current_customer.address %></td>
    </tr>
    <tr>
      <td class="table-active">電話番号</td>
      <td><%= current_customer.telephone_number %></td>
    </tr>
    <tr>
      <td class="table-active">メールアドレス</td>
      <td><%= current_customer.email %></td>
    </tr>
  </tbody>
</table>

   <h2>配送先</h2>
     <%= link_to "一覧を見る", addresses_path(current_customer.id), class: 'btn btn-primary' %>
   <h2>注文履歴</h2>
     <%= link_to "一覧を見る", orders_path(current_customer.id), class: 'btn btn-primary' %>



