<div class="col-md-8 px-5 px-sm-0 mx-auto">
  <h1 class="mt-3">管理者ログイン</h1>

  <%= form_with model: @admin, url: session_path(resource_name) do |f| %>

　<div class="form-row mt-5">
    <%= f.label :メールアドレス, class: 'col-sm-2 col-form-label' %>
     <div class="col">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-row mt-4">
    <%= f.label :パスワード, class: 'col-sm-2 col-form-label' %>
    <div class="col">
    <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="mt-4 mb-4">
    <%= f.submit "ログイン", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
