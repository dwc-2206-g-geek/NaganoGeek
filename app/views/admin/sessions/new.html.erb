<div class="col-md-8 px-5 px-sm-0 mx-auto">
  <h1 class="mt-4">管理者ログイン</h1>

  <%= form_with model: @admin, url: session_path(resource_name) do |f| %>

　<div class="form-row mt-3">
    <%= f.label :メールアドレス, class: 'col-sm-2 col-form-label' %>
     <div class="col">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control exampleInputEmail1' %>
    </div>
  </div>

  <div class="form-row mt-4">
    <%= f.label :パスワード, class: 'col-sm-2 col-form-label' %>
    <div class="col">
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control exampleInputEmail1' %>
    </div>
  </div>

  <div class="mt-4 mb-4 text-center">
    <%= f.submit "ログイン", class: 'btn btn-primary col-sm-3' %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
