<div class="container">

  <div class="h4 col-sm-2 p-3 bg-light text-center">商品編集</div>

  <div class="row-lg">
    <div class="col-lg offset-3">
      <%= form_with model: @item, url: admin_item_path(@item.id), mehod: :patch do |f| %>
        <table class="new-item-form center">
          <tbody>
            <tr>
              <th>画像</th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>

            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>

            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :introduction %></td>
            </tr>

            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>

            <tr>
              <th>税抜価格</th>
              <td><%= f.text_field :price %>円</td>
            </tr>

            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :is_active, [["販売中","false"], ["売り切れ","true"]], include_blank: "--選択してください--" %></td>
            </tr>
          </tbody>
        </table>
        <div class="offset-1">
　        <%= f.submit '変更を保存' , class: 'btn btn-success'  %>
　      </div>
      <% end %>
    </div>
  </div>

</div>