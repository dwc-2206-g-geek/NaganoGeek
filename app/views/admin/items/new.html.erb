<div class="container">

<div class="h4 col-2 p-3 bg-light">商品新規登録</div>

<div class="row offset-3">
  <%= form_with model: @item, url: admin_items_path do |f| %>
  <table class="new-item-form">
    <tbody>
      <tr>
        <th>画像</th>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>

      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name, class: "form-control" %></td>
      </tr>

      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :introduction %></td>
      </tr>

      <tr>
        <th>ジャンル</th>
      </tr>

      <tr>
        <th>税抜価格</th>
        <td><%= f.text_field :introduction %>円</td>
      </tr>

      <tr>
        <th>販売ステータス</th>
        <td><%= f.select :is_active, [["販売中","false"], ["売り切れ","true"]], include_blank: "--選択してください--" %></td>
      </tr>
    </tbody>
  </table>


  <div class="text-center">
　  <%= f.submit '新規登録' , class: 'btn btn-success'  %>
　</div>
  <% end %>
  </div>

  </div>

</div>