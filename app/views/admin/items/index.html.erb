<div class="container">

  <div class="h4 col-2 p-3 bg-light">商品一覧</div>

  <div class="row offset-3">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th></th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, class: "item_#{item.id}" %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td></td>
            <td><% if item.is_active == false %>
                  販売中
                <% else %>
                  売り切れ
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  </div>
  <%= paginate @items %>
</div>