<div class='container'>
  <div class='row'>
    <h1>注文詳細画面(ステータス編集を兼ねる)</h1>

      <strong>購入者</strong>
      <%= @order.name %>

      <strong>注文日</strong>
      <%= @order.created_at.strftime('%Y/%m/%d') %>

      <strong>配送先</strong>
      <%= '〒' + @order.postal_code.to_s %><br>
      <%= @order.address %><br>
      <%= @order.name %>

      <strong>支払方法</strong>
      <%= @order.payment_method_i18n %>

      <strong>ステータス</strong>
      <%= @order.status %>
      <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
        <%= f.select :order_status, Order.order_statuses.keys, class: "order_status" %>
        <%= f.submit "更新" , class: "btn btn-outline-success" %>
      <% end %>


      <table class='table table-hover  table-bordered'>
      <thead>
        <tr class="table-secondary table">
          <th class="col-4">商品名</th>
          <th class="col-2">単価（税込）</th>
          <th class="col-2">数量</th>
          <th class="col-2">小計</th>
          <th class="col-4">制作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do | order_detail| %>
          <tr>
            <td><%= order_detail.item.with_tax_price.to_s(:delimited, delimiter: ',') %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal.to_s(:delimited, delimiter: ',') %></td>
            <% @total +=  order_detail.subtotal %>
          </tr>
        <% end %>
      </tbody>
    </table>



    <strong class="table-secondary">商品合計</strong>
    <%= @total.to_s(:delimited, delimiter: ',') %>

    <strong class="table-secondary">送料</strong>
    <%= @order.shipping_cost %>

    <strong class="table-secondary">請求金額</strong>
    <% @total_payment = @total + @order.shipping_cost.to_i %>
    <%= @total_payment.to_s(:delimited, delimiter: ',') %>

  </div>
</div>