<div class="container">
 <div class='row'>
  <div class="col-md-10 px-5 px-sm-0 mx-auto">
   <h1 class="mt-4"><%= @customer.first_name %>&nbsp;<%= @customer.last_name %>さんの会員詳細</h1>

  <table class="mt- table table-borderless">
  <tbody>
   <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.first_name %>&nbsp;<%= @customer.last_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.first_name_kana %>&nbsp;<%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td >会員ステータス</td>
      <td>
        <% if @customer.is_deleted == false %>
          <div class="text-success font-weight-bold">有効</div>
        <% else %>
          <div class="font-weight-bold">退会</div>
        <% end %>
      </td>
    </tr>
  </tbody>
  </table>

  <div class="row mt-2">
    <div class="col-md-3">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
    </div>
    <div class="col-md-3">
      <%= link_to "注文履歴一覧を見る", admin_top_path, class: 'btn btn-primary' %>
    </div>
    
    </div>
  </div>
</div>